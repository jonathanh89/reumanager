<div id="single_column">
	<%= render :partial => "application/header" %>
	<div id="students">
		<%= render :partial => "admin/admin_header" %>
		
		<% if @recommendation -%>
			<h5><%= link_to "View Student Recommendation", @recommendation %></h5>
		<% else -%>
			<h5>No recommendation has been received for this student</h5>
		<% end -%>
		
		<div id="student_application">
			<h1>Student Application for <%= @student.firstname %> <%= @student.lastname %></h1>

			<h5>Personal Data</h5>
			<p>
				<%= @student.firstname %> <%= @student.lastname %>
				<br />
				<%= @student.street %>
				<br />
				<%= @student.city %>, <%= @student.state %> <%= @student.zip %>
				<br />
				<%= mail_to @student.email, @student.email  %> | <%= @student.phone %>
			</p>
		
			<h5>Academic Info</h5>
			<p>
				<%= @student.college_level.capitalize %> majoring in <%= @student.major %> 
				<br />
				Attended <%= @student.college %> from <%= @student.college_start %> to <%= @student.college_end %>
				<br />
				GPA: <%= @student.gpa %> out of <%= @student.gpa_range %>
			</p>
		
			<h5>Awards</h5>
			<p>
				<%= @student.awards.gsub("\r\n", "<br />") %>
			</p>
		
			<h5>Research Experience</h5>
			<p><%= @student.research_experience.gsub("\r\n", "<br />") %></p>
		
			<h5>GPA Comments</h5>
			<p><%= @student.gpa_comments.gsub("\r\n", "<br />") %></p>
		
			<h5>Personal Statement</h5>
			<p><%= @student.personal_statement.gsub("\r\n", "<br />") %></p>
		</div>
	</div> 
</div>