<div id="residence">
	<p class="float">
		<label>Firstname</label><br/>
		<%= f.text_field 'firstname' %>
	</p>
	<p class="float">
		<label>Middlename</label><br/>
		<%= f.text_field 'middlename' %>
	</p>
	<p class="float">
		<label>Lastname</label><br/>
		<%= f.text_field 'lastname' %>
	</p>
	<p class="clear">
		<label>Street&nbsp;Address</label><br/>
		<%= f.text_field 'street' %>
	</p>
	<p class="float">
		<label>City</label><br/>
		<%= f.text_field 'city' %>
	</p>
	<p class="float">
		<label>State</label><br/>
		<%= f.text_field 'state' %>
	</p>
	<p class="float">
		<label>Zip</label><br/>
		<%= f.text_field 'zip' %>
	</p>
	<p class="float">
		<label>Phone</label><br/>
		<%= f.text_field 'phone' %>
	</p>
	<p class="float">
		<label>Email</label><br/>
		<%= f.text_field 'email' %>
	</p>
</div>
<p class="clear small" id="perm_bool">
	<label>Is the above address your permanent residence?</label>
	&nbsp;
	<%= radio_button_tag 'paddress', 'yes', true %><label>Yes</label>
	&nbsp;&nbsp;
	<%= radio_button_tag 'paddress', 'no', false %><label>No</label>
</p>
<div id="presidence" style="display:none;">
	<p class="clear">
		<label>Please add your permanent residence:</label>
	</p>
	<p class="clear">
		<label>Street&nbsp;Address</label><br/>
		<%= f.text_field 'pstreet' %>
	</p>
	<p class="float">
		<label>City</label><br/>
		<%= f.text_field 'pcity' %>
	</p>
	<p class="float">
		<label>State</label><br/>
		<%= f.text_field 'pstate' %>
	</p>
	<p class="float">
		<label>Zip</label><br/>
		<%= f.text_field 'pzip' %>
	</p>
	<p class="float">
		<label>Phone</label><br/>
		<%= f.text_field 'pphone' %>
	</p>
</div>
<p class="float">
	<label>Citizenship:</label>
	<%= f.select 'citizenship', %w{United\ States U.S.\ Permanent\ Resident} %>
	<span class="hidden" id="cor" style="display:none;">
		<label>Country of Residence:</label>
		<%= f.text_field 'cresidence' %>
	</span>
</p>
<p class="clear">
	<label>Gender*:</label>
	<%= f.select 'gender', %w{Female Male} %>
</p>
<p class="clear">
	<label>Race*:</label>
	<%= f.select 'race', %w{American\ Indian\ or\ Alaskan\ Native African\ American\ or\ Black Hispanic\ or\ Latino Asian\ or\ Pacific\ Islander} %>
</p>
<p class="clear">
	<label>Disability*:</label>
	<%= select_tag 'disability', options_for_select(%w{No Yes}) %>
	<span class="hidden" id="dis" style="display:none;">
		<label>Specify:</label>
		<%= f.text_field 'disability' %>
	</span>
</p>