<div id="single_column">
	<%= render :partial => "application/header" %>
	<div id="students">
		<%= render :partial => "admin/admin_header" %>
		<h1>Listing Students Applicants</h1>
		<table cellspacing=0>
			<thead>
				<th class="name">Applicant Name</th>
				<th class="college">College/University</th>
				<th class="major">Major</th>
				<th class="gpa">GPA</th>
				<th class="date">Apply Date</th>
				<th class="admin">Admin Functions</th>
			</thead>
		  	<% for student in @students %>
		  		<tr style="background-color:#<%= cycle("ddd","bbb") %>;">
					<td class="name"><%= link_to "#{student.firstname} #{student.lastname}", student %></td>
					<td class="college"><%= link_to "#{student.college}", student %></td>
					<td class="major"><%= link_to "#{student.major}", student %></td>
		   			<td class="gpa"><%= link_to "#{student.gpa[0..2]} / #{student.gpa_range[0..2]}", student %></td>
		   			<td class="date"><%= link_to "#{student.created_at.strftime("%b %d [%H:%M %Z]")}", student %></td>
					<td class="admin"><%= link_to 'Show', student %><br /><%= link_to 'Destroy', student, :confirm => 'Are you sure? This information will be permanently removed from our database.', :method => :delete %></td>
				</tr>
			<% end %>
		</table>
	</div> 
</div>