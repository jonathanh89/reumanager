<%= form_for(current_applicant, :url => applicants_records_url, :html => { :method => :put }) do |f| %>

  <%= errors_for current_applicant %>
  
  <div class='row'>
    <div class="span9">
      
      <div class='row'>
        <div class="span9">
          <div class="inner">
            <h2>Academic Info</h2>
          </div> <!-- end  inner -->          
        </div>
        
        <section class='records'>
          <div class="span9">
            <%= f.fields_for :records do |builder| %>
              <%= render 'record_fields', f: builder %>
            <% end %>
            <div class="inner"><%= link_to_add_fields "Add academic record", f, :records %></div>
          </div>
        </section>

        <section class='gpa_comment'>
          <div class="span9">
            <div class="inner">
              <h2>GPA Comments</h2>
              <%= f.text_area :gpa_comment, :class => 'span8', :rows => 2, :placeholder => "Do you feel your GPA accurately reflects your academic abilities? Please comment on why or why not in the space provided."  %>
            </div> <!-- end  inner -->
          </div>
        </section>
        
        <section class='awards'>
          <div class="span9">
            <div class="inner">
              <h2>Awards</h2>
            </div> <!-- end  inner -->          
            <%= f.fields_for :awards do |builder| %>
              <%= render 'award_fields', f: builder %>
            <% end %>
            <div class="inner"><%= link_to_add_fields "Add award", f, :awards %></div>
          </div>
        </section>

        <section class='cpu_skills'>
          <div class="span9">
            <div class="inner">
              <h2>Computer Skills</h2>
              <%= f.text_area :cpu_skills, :class => 'span8', :rows => 2, :placeholder => "Please list any computer related skills (e.g. Application experience, programming ability, etc.)"  %>
            </div> <!-- end  inner -->
          </div>
        </section>

        <section class='lab_skills'>
          <div class="span9">
            <div class="inner">
              <h2>Laboratory Skills</h2>
              <%= f.text_area :lab_skills, :class => 'span8', :rows => 2, :placeholder => "Please list any laboratory related skills"  %>
            </div> <!-- end  inner -->
          </div>
        </section>

        <section class='lab_skills'>
          <div class="span9">
            <div class="inner">
              <h2>Personal Statement</h2>
              <%= f.text_area :statement, :class => 'span8', :rows => 6, :placeholder => "Please Complete a brief essay (up to 250 words) explaining why you are interested in our program and how the experience may help you achieve your future goals."  %>
            </div> <!-- end  inner -->
          </div>
        </section>
        
      </div> <!-- end .row --> 
    </div> <!-- end .span9 --> 
  
    <div class="span3">
      <div class="dropdown application_nav">
        <!-- Link or button to toggle dropdown -->
        <ul class="dropdown-menu" role="menu" >
          <li><a tabindex="-1" href="#"><i class="icon-exclamation-sign"></i>&nbsp;&nbsp;Profile</a></li>
          <li class='active'><a tabindex="-1" href="#"><i class="icon-exclamation-sign"></i>&nbsp;&nbsp;Academic Info</a></li>
          <li><a tabindex="-1" href="#"><i class="icon-exclamation-sign"></i>&nbsp;&nbsp;Recommendation</a></li>
          <li><a tabindex="-1" href="#"><i class="icon-exclamation-sign"></i>&nbsp;&nbsp;Status</a></li>
        </ul>
      </div> <!-- end .span3 -->
    </div> <!-- end .row --> 
    
    <div class="span12">
      <div class="inner">
        <hr />
        <p class='clear'><%= f.submit "Update Academic Info", :class => "btn btn-success" %>&nbsp;&nbsp;&nbsp;Changed your mind? <%= link_to "Delete your application", registration_path(current_applicant), :confirm => "Are you sure?", :method => :delete, :class => "btn btn-mini btn-danger" %></p>  
        <small><strong>You can <%= link_to "logout", destroy_applicant_session_path, :method => :delete %> and continue you application at anytime, however, it will not be accepted until all the above data has been submitted.</strong></small>        
      </div>
    </div>
  
  
  </div>

    

<% end %>