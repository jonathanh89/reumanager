	<label>Recommender Name</label><br />
	<%= r.text_field 'name' %>
</div>
<div class="fieldbox float">
	<label>Title</label><br />
	<%= r.text_field 'title' %>
</div>
<div class="fieldbox float">
	<label>Department</label><br />
	<%= r.text_field 'department' %>
</div>
<div>
	<label>College or University</label><br />
	<%= r.text_field 'college' %>
</div>
<div class="fieldbox float">
	<label>Phone</label><br />
	<%= r.text_field 'phone' %>
</div>
<div class="fieldbox float">
	<label>Email</label><br />
	<%= r.text_field 'email' %>
</div>
