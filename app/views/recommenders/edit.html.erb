<%= render :partial => "layouts/header_text" %>
<%= render :partial => "layouts/app_navbar" %>

<% form_for(@recommender, :url => {:action => "update"}, :method => "put") do |r| %>
	<%= render :partial => "recommender_information", :locals => { :r => r }%>
    <p id="submit"><%= r.submit "Update Faculty Recommendation", :onclick => "$('submit').hide();$('overlay').show();$('opaque_overlay').show();$('wait_box').show();" %></p>
	<br style="clear:both;" />	
<% end %>