<%= render :partial => "layouts/header_text" %>
<%= render :partial => "layouts/app_navbar" %>

<%= error_messages_for :recommender %>
<% form_for(@recommender, :url => { :action => "create" }, :method => "post") do |r| %>
	<div><label>Please supply the name and contact information of a faculty member who has agreed to write a letter of recommendation in support of your application. Instructions for submitting the letter will be sent directly to the faculty member</label></div>
	<%= render :partial => "recommender_information", :locals => { :r => r }%>
	<br style="clear:both;" />
	<p id="submit"><%= r.submit "Add Faculty Recommendation", :id => "submit" %></p>
<% end %>