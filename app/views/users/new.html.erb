<div id="single_column">
	
	<h2 class="center">Summer 2009 Online Application</h2>
		
	<div id="application">
			<%= content_tag 'div', h(flash[:notice]), :class => 'notice', :id => 'notice' if flash[:notice] %> 
			<%= content_tag 'div', h(flash[:error]), :class => 'notice error', :id => 'error' if flash[:error] %>
			<% @user.password = @user.password_confirmation = nil %>

			<%= error_messages_for :user %>
			<% form_for :user, :url => users_path do |f| -%>

			<%= render :partial => 'personal_data', :locals => { :f => f } %>		
			
			<p class="right" id="submit"><%= submit_tag 'Sign up', :onclick => "$('submit').hide();alert('Please wait up to 30 seconds for the server to process your request.');" %></p>
			<br class="clear" />
			<% end -%>
	</div>
</div>
<div id="observers">
	<%= render :partial => "layouts/observers" %>
</div>