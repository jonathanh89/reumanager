<div id="single_column">
	

	<h2>Summer 2009 Online Application</h2>
	<div id="about">
		<h5>Submission Deadline:&nbsp;<span class="blood_red">February 20, 2009</span></h5>
	</div>
	<br />
	<% if current_user.academic_record && current_user.transcript && current_user.transcript.content_type == "application/pdf" && current_user.recommender && current_user.extra -%>
		<h1>Please verify your application data</h1>
	<% else -%>
		<h1 class="blood_red">Your application is incomplete</h1>
	<% end -%>
	<div id="application">
		<%= render :partial => "layouts/app_navbar" %>
		<%= content_tag 'div', h(flash[:notice]), :class => 'notice', :id => 'notice' if flash[:notice] %> 
		<%= content_tag 'div', h(flash[:error]), :class => 'notice error', :id => 'error' if flash[:error] %>
		<fieldset id="personal_data">
			<h4><%= link_to_unless_current "Personal Data", { :controller => "users", :action => "edit" }%></h4>
			<%= render :partial => 'show_personal_data', :locals => { :f => current_user } %>
		</fieldset>

		<fieldset id="academic_record">
			<h4><%= link_to_unless_current "Academic Information", { :controller => "academic_records" } %></h4>
			<% if current_user.academic_record && current_user.transcript && current_user.transcript.content_type == "application/pdf" -%>
				<%= render :partial => 'show_academic_record', :locals => { :f => current_user.academic_record } %>
			<% else -%>
				<%= content_tag 'p', 'You have not added your academic records.', :class => 'blood_red' unless current_user.academic_record %>
				<%= content_tag 'p', 'You have not uploaded a PDF copy of your unofficial transcript.', :class => 'blood_red' unless current_user.transcript && current_user.transcript.content_type == 'application/pdf' %>				
			<% end -%>
		</fieldset>

		<fieldset id="recommender">
			<h4><%= link_to_unless_current "Faculty Recommendation", { :controller => "recommenders" } %></h4>
			<% if current_user.recommender -%>
				<%= render :partial => 'show_recommender', :locals => { :r => current_user.recommender } %>
			<% else -%>
				<p class="blood_red">You have not entered the faculty recommendation info.</p>
			<% end -%>			
		</fieldset>
		
		<fieldset id="extra">
			<h4><%= link_to_unless_current "Additional Information", { :controller => "extras" } %></h4>
			<% if current_user.extra -%>
				<%= render :partial => 'show_extra', :locals => { :e => current_user.extra } %>
			<% else -%>
				<p class="blood_red">You have not entered your additional info.</p>
			<% end -%>
		</fieldset>
	</div>
	<% if current_user.academic_record && current_user.transcript && current_user.transcript.content_type == "application/pdf" && current_user.recommender && current_user.extra %>
		<h1><%= link_to "Submit Application", { :action => "submit"}, :method => "post", :onclick => "$('app_submit').hide();alert('Please wait up to 30 seconds for the server to process your request.');", :id => "app_submit" %></h1>
	<% end -%>
</div>