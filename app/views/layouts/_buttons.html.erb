<% unless params[:action] == "login" -%>
	<ul id="buttons">
		<% if logged_in? -%>
			<li class="last"><%= link_to "Logout", { :controller => "sessions", :action => "destroy" } %></li>
			<% if params[:controller] == "users" || params[:controller] == "academic_records" || params[:controller] == "recommenders" || params[:controller] == "extras" -%>
				<li class="selected"><%= link_to "Application", { :controller => "admin" }%>
			<% else -%>
				<li><%= link_to "Application", { :controller => "admin" }%>
			<% end -%>
		<% else -%>
			<li class="last"><%= link_to "Login/Apply", { :controller => "sessions", :action => "new" } %></li>
		<% end -%>

		<% if current_user && current_user.id == 1 -%>		
			<% if params[:controller] == "admin" -%>
				<li class="selected"><%= link_to "Admin", { :controller => "admin" }%>
			<% else -%>
				<li><%= link_to "Admin", { :controller => "admin" }%>
			<% end -%>
		<% end -%>
		
		<% unless Date.today < Date.parse("January 10 2010") -%>
			<% if params[:controller] == "users" -%>
				<li class="selected"><%= link_to "Apply", { :controller => "users" } %></li>
			<% else -%>
				<li><%= link_to "Apply", { :controller => "users", :action => "new" } %></li>
			<% end -%>
		<% end -%>	
		
		<% if params[:controller] == "projects" && params[:action] == "index" -%>
			<li class="selected"><%= link_to "Past Projects", { :controller => "projects" } %></li>
		<% else -%>
			<li><%= link_to "Past Projects", { :controller => "projects" } %></li>
		<% end -%>

		<% if params[:controller] == "welcome" && params[:action] == "index" -%>
			<li class="selected"><%= link_to "Welcome", { :controller => "welcome" } %></li>
		<% else -%>
			<li><%= link_to "Welcome", { :controller => "welcome" } %></li>
		<% end -%>
		
	</ul>
<% end -%>